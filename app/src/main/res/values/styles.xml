<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="BottomNavBar" parent="Theme.MaterialComponents.Light.Dialog">
        <item name="colorPrimaryDark">@color/white</item>
        <item name="colorAccent">@color/buttonColor</item>
        <item name="colorPrimary">@color/internet_connect</item>
    </style>


    <style name="App.Custom.Indicator" parent="Widget.Material3.BottomNavigationView.ActiveIndicator">
        <item name="android:color">@color/indicator</item>
    </style>


    <style name="checkBoxStyle" parent="Base.Theme.AppCompat">
        <item name="colorAccent">@color/buttonColor</item>
        <item name="android:textColorSecondary">@color/black</item>
    </style>

    <style name="btnBackAppbarStyle">
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_margin">5dp</item>
        <item name="background">?selectableItemBackgroundBorderless</item>
        <item name="backgroundTint">@android:color/transparent</item>
        <item name="android:padding">5dp</item>
        <item name="android:scaleType">centerInside</item>
        <item name="tint">@color/buttonColor</item>
    </style>

    <style name="DialogAnimationScaleInOut">
        <item name="android:windowEnterAnimation">@anim/dialog_scale_in</item>
        <item name="android:windowExitAnimation">@anim/dialog_scale_out</item>
    </style>


    <style name="appBarTitleStyle">
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Widget.ActionBar.Title
        </item>
        <item name="android:textColor">@color/buttonColor</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_marginStart">5dp</item>
        <item name="android:layout_marginEnd">5dp</item>
        <item name="android:gravity">center_vertical</item>
    </style>

</resources>